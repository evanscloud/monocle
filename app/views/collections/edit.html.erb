<%= render "collection_errors" %>

<div class="custform">
  <h1>Edit <%= @collection.name %> Collection</h1>

  <div class="form-input">
    <%= form_for @collection, :url => collection_path(@collection.id) do |f| %>

      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "form-control", autofocus: true %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "btn btn-default" %>
      </div>

    <% end %>
  </div>
</div>

<div class="custbtn-container">
  <%= button_to "Back", user_collections_path(@collection.user_id), method: 'get', class: "btn btn-block" %>
</div>
