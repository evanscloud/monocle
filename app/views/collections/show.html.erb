<div class="custcontainer">
  <u><h1><%= @collection.name %></h1></u>

  <h3><%= button_to "Add a New Book", new_user_collection_book_path(@collection.user_id, @collection.id), method: 'get', class: "btn btn-default" %></h3><br>

  <div class="custlist">
    <% if @collection.books.empty? %>
      <h5>it's kinda lonely here...</h5>
    <% else %>
      <% @collection.books.each do |book| %>
        <%= link_to book.title book.author, user_collection_book_path(@collection, book) %>
      <% end %>
    <% end %>
  </div><br>
</div>

<div class="custcontainer">
  <h3><%= button_to "Edit #{@collection.name}", edit_user_collection_path(@collection.user_id, @collection), :method => :get, class: "btn btn-default" %></h3>
    <h3><%= button_to "Delete #{@collection.name}", {:controller => :collections, :action => "destroy", :id => @collection.id}, :method => :delete, class: "btn btn-default" %></h3>
</div>
