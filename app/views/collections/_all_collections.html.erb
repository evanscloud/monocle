<% content_for :head do %>
  <%= javascript_include_tag "collections/all_collections" %>
<% end %>

<h1>Take a look at what's out there!</h1>

<div class="custlist" id="all-collections">
  <% if @collections.empty? %>
    <h5>Where did everyone go...?</h5>
  <% else %>
    <u><h3>Little Tibits</h3></u>

    <table align="center">
      <tr>
        <td>Recently Added:</td>
        <td>
          <% Collection.most_recent.each do |collection| %>
            <%= link_to collection.name, collection_path(collection.id) %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>Most Books:</td>
        <td>
          <% Collection.most_books.each do |collection| %>
            <%= link_to collection.name, collection_path(collection.id) %>
          <% end %>
        </td>
      </tr>
    </table>
  <% end %>
  <hr>
</div>
