<div class="form-input">

  <%= form_for @collection, url: {controller: "collections", action: "create"} do |f| %>
  <%= render "collection_errors" %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: "form-control", autofocus: true %>
    </div>

    <div class="actions">
      <%= f.submit "Create", class: "btn btn-default" %>
    </div>
  <% end %>
</div>
